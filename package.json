{
  "name": "universal",
  "description": "Universal App",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=6.x"
  },
  "scripts": {
    "build:client": "NODE_ENV=production webpack --config ./webpack.config.production.js --progress --profile --colors --optimize-minimize",
    "build:server": "./node_modules/.bin/babel ./app --out-dir ./build --source-maps --copy-files",
    "build": "npm run lint && npm run clean:build && npm run build:server && npm run build:client",
    "clean:build": "rimraf build && rimraf public",
    "clean:coverage": "rimraf coverage",
    "clean:node_modules": "rimraf node_modules",
    "clean": "npm run clean:build && npm run clean:coverage && npm run clean:node_modules",
    "lint:eslint": "eslint .",
    "lint:sass-lint": "sass-lint -c ./.sass-lint.yml './app/**/*.scss' -v",
    "lint": "npm run lint:eslint && npm run lint:sass-lint",
    "production-build": "npm run build && npm run clean:node_modules && yarn install --production",
    "production": "NODE_ENV=production node ./build/config/server.js",
    "reinstall": "npm run clean && npm install",
    "start": "./node_modules/.bin/nodemon --exec NODE_ENV=development ./node_modules/.bin/babel-node ./app/config/server.js",
    "test:coverage": "NODE_ENV=test ./node_modules/.bin/jest --config .jestrc.json --coverage",
    "test:jest": "NODE_ENV=test ./node_modules/.bin/jest --config .jestrc.json --verbose",
    "test:watch": "NODE_ENV=test ./node_modules/.bin/jest --config .jestrc.json --watch",
    "test": "npm run lint && npm run test:jest"
  },
  "dependencies": {
    "apollo-boost": "0.1.12",
    "apollo-link-http": "1.5.4",
    "babel-polyfill": "6.26.0",
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "consolidate": "0.15.1",
    "css-modules-require-hook": "4.2.3",
    "debug-caller": "2.2.0",
    "express": "4.16.3",
    "graphql": "0.13.2",
    "graphql-tag": "2.9.2",
    "handlebars": "4.0.11",
    "history": "4.7.2",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.10",
    "node-sass": "4.9.2",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-apollo": "2.1.9",
    "react-dom": "16.4.1",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.4.0",
    "babel-loader": "7.1.5",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-transform-strict-mode": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "css-loader": "1.0.0",
    "eslint": "5.2.0",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-loader": "2.1.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.10.0",
    "html-webpack-harddisk-plugin": "0.2.0",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.4.1",
    "jsdom": "11.11.0",
    "jsdom-global": "3.0.2",
    "lodash-webpack-plugin": "0.11.5",
    "mini-css-extract-plugin": "0.4.1",
    "nodemon": "1.18.3",
    "react-hot-loader": "4.3.3",
    "react-test-renderer": "16.4.1",
    "rimraf": "2.6.2",
    "sass-lint": "1.12.1",
    "sass-loader": "7.0.3",
    "style-loader": "0.21.0",
    "webpack": "4.16.1",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.3"
  }
}
